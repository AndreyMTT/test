@startuml

entity "Product" {
  * id : UUID
  --
  * name : string
  * description : text
  * price : decimal
  * stock : integer
  * category_id : UUID
  * created_at : timestamp
}

entity "Category" {
  * id : UUID
  --
  * name : string
}

entity "User" {
  * id : UUID
  --
  * username : string
  * password_hash : string
  * email : string
  * role : string
  * created_at : timestamp
}

entity "Order" {
  * id : UUID
  --
  * user_id : UUID
  * status : string
  * created_at : timestamp
}

entity "OrderItem" {
  * id : UUID
  --
  * order_id : UUID
  * product_id : UUID
  * quantity : integer
  * price : decimal
}

User "1" -- "*" Order : places
Order "1" -- "*" OrderItem : contains
OrderItem "*" -- "1" Product : refers to
Product "*" -- "1" Category : belongs to

@enduml
